<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindMy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Input Field Style-->
    <style name="FindMyInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="elevation">2dp</item>
        <item name="android:shadowColor">@color/brand_color</item>
        <item name="android:shadowDx">120</item>
        <item name="android:shadowRadius">80</item>
        <item name="addElevationShadow">true</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">@color/input_field_background_color</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/MyTextInputLayoutHint</item>
        <item name="android:layout_height">54dp</item>

    </style>

    <style name="MyTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/input_field_hint_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>