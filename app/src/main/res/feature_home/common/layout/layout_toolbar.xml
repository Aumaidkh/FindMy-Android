<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <!--tools:srcCompat="@tools:sample/avatars"-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tvProfilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:shapeAppearance="@style/CircularImage"
        app:strokeColor="@color/brand_color"
        app:strokeWidth="2dp"
        android:src="@drawable/dummy_dp"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,Murtaza"
        android:layout_marginTop="6dp"
        android:layout_marginStart="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black_80"
        android:textFontWeight="600"
        app:layout_constraintStart_toEndOf="@+id/tvProfilePic"
        app:layout_constraintTop_toTopOf="@+id/tvProfilePic" />


    <TextView
        android:id="@+id/tvLetsFindOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Let's find your lost items!"
        android:textColor="@color/black_80"
        android:textFontWeight="600"
        android:layout_marginTop="-6dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        app:layout_constraintStart_toEndOf="@+id/tvLetsFindOut"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@android:color/transparent"
        android:src="@drawable/_icon__search_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>